<UserControl x:Class="Zone.View.FileItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zone.View"
             mc:Ignorable="d" 
             Background="Transparent"
             Height="112" Width="112" Padding="0.5" >
    <Grid>
        <Image Name="filePreview" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <Border>
            <Viewbox Height="18" VerticalAlignment="Bottom" Margin="0 0 0 5">
                <TextBlock x:Name="textBlock" Text="File Name" Foreground="White" TextAlignment="Center" TextWrapping="Wrap" FontFamily="Calibri Light"/>
            </Viewbox>
        </Border>
    </Grid>
</UserControl>
